<div class = "show_container">

    <h2>Sign up for Search Movies </h2>

    <hr>

    

<%= form_with model: @user, local: true do |f| %>

    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
    <br><br>

    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
    <br><br>

    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>

    


    <%= f.submit 'Sign up', :class => 'submit' %>

<% end %>


</div>
