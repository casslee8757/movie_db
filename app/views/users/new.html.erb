<div class = "show_container">

    <h2>Sign up for Search Movies </h2>

    <hr>

<% if @user.errors.any? %>
    <strong> Please correct the following errors: </strong>
    
        <% @user.errors.full_messages.each do |e| %>
        <li>
            <p id = "login_error_message"><%= e %></p>
        </li>
        <% end %>
    
    <hr>
<% end %>

<%= form_with model: @user, local: true, :html => { multipart: true } do |f| %>

    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
    <br><br>

    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
    <br><br>

    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>

    <%= f.label 'Image' %>
    <br>
    <%= f.file_field :user_image, :class => 'file_upload' %>
    <br><br>

    


    <%= f.submit 'Sign up', :class => 'submit' %>

<% end %>


</div>
