<div class="show_container">

    <%= image_tag @movie.movie_image, :class => 'movie_big_image' %>
    <h2><%= @movie.title %></h2>

    <p>
    <%= image_tag @movie.poster %>
    </p>
    <hr>
    <p>
    <strong>Director:</strong>
    <%= link_to @movie.director.name, director_path(@movie.director) %>
    </p>
    <hr>
    <p>
    
    <strong>Casts:</strong>
    <div class="cast_list">
        <% @movie.casts.each do |c|%>
        <%= link_to cast_path(c.id) do %>
        <div class="cast_list2">
            <%= image_tag(c.image, :class => 'cast_thumbnail') %><br>
            <%= c.name %>
            <% end %>
            </div>
        <% end %>
        
        </p>
    </div>

    <hr>

    <p>
    <h2>Movie Info</h2><br>
    <strong>Release Year:</strong>
    <%= @movie.year %>

    </p>

    <p>
    <strong>Running Time :</strong>
    <%= @movie.time %>

    </p>

    <p>
    <strong>Overview</strong><br>
    <%= @movie.overview %>

    </p>

    <p>
    <stro>Rating:</stro ng>
    <%= @movie.rating %>

    </p>

    <hr>

    <%= link_to "Add review" %>

</div>