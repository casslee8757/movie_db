<!DOCTYPE html>
<html>
  <head>
    <title>MovieReview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/63e0a49b76.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap" rel="stylesheet">
    <%= cloudinary_js_config %>

  </head>

  <body>
    <nav class ="navbar">
      <div class="navbar_logo">
        <span class="fas fa-film"></span>
        <%= link_to 'Search Movies', root_path, :class => 'home_link' %>
      </div>
      <div class="navbar_menu">
        <div class="nav_dropdown">
        <% if @current_user.present? %>
          <%= link_to '#', :class => "nav_font" do %>
            Welcome, <%= @current_user.name %>
          <% end %>
          <div class="dropdown_content">
            <%= link_to 'Profile', profile_path %>
            <%= link_to 'Watchlists', profile_watchlist_path %>
            <%= link_to 'Your ratings', profile_ratings_path %>
          </div>
        </div>
          |
          <%= link_to 'Log out', login_path, method: 'delete', :class => 'home_link' %>
          
          <% else %>
          <%= link_to 'Log in', login_path, :class => 'home_link' %>
          |
          <%= link_to 'Sign up', new_user_path, :class => 'home_link' %>
          
        <% end %>
      </div>
    </nav>
  
    <%= yield %>
  </body>
</html>
