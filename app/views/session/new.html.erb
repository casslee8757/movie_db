<div class="show_container">


<h2>Log in</h2>
<hr>
<% if flash[:error] %>
    <br>
    <strong>
        <p id = 'login_error_message'><%= flash[:error]  %></p>
    </strong>
    <br>
    <br>

<% end %>

<%= form_with url: login_path, local: true do |f| %>

    <%= f.label 'Email address' %>
    <br>
    <%= f.text_field :email %>
    <br><br>

    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>

    <%= f.submit 'LOG IN', :class => 'submit' %>

    <% end %>

    </div>