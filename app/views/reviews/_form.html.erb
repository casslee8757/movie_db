

    <%= form_with url: reviews_path, local: true do |f| %>

        <br>
        
        <%= f.label 'Comment' =%><br>
        <%= f.text_area :content, placeholder: 'What do you think about the movie?', :class => 'review_box' %>
        <br>
        <%= f.label :rating  %><br>
        <%= f.number_field :rating, min: 0, max: 10, step: :any %>
        <br><br>
        <%= f.hidden_field :movie_id, value: params[:id] %>
        <br>
        <br>
        <%= f. submit :class => 'submit' %>

    <% end %>