

    <%= form_with url: reviews_path, local: true do |f| %>

        <p> <span id = "overview"><%= @current_user.name %>, </span> What do you think about the movie?</p>
        <br>
        <%= f.text_area :content, :class => 'review_box' %>

        <%= f.hidden_field :movie_id, value: params[:id] %>
        <br>
        <br>
        <%= f. submit :class => 'submit' %>

    <% end %>